{
  "name": "boilerplate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "proxy": "http://localhost:3001",  
  "scripts": {
    "client": "cd frontend && vite",
    "server": "cd server && node app.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "build": "tsc && vite build",
    "lint": "eslint . --ignore-path .eslintignore --ext js,ts,jsx,tsx --fix",
    "lint-check": "eslint . --ignore-path .eslintignore --ext js,ts,jsx,tsx",
    "format": "prettier --write \"./**/*.{css,scss,json,md,js,ts,tsx,jsx}\"",
    "format-check": "prettier --check \"./**/*.{css,scss,json,md,js,ts,tsx,jsx}\"",
    "scss-lint": "stylelint \"./**/*.{css,scss}\"",
    "scss-lint-fix": "stylelint \"./**/*.{css,scss}\" --fix",
    "preview": "vite preview"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.1",
    "react-router-dom": "^6.13.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-thunk": "^2.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.1",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.1",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "react-icons": "^4.10.1",
    "react-markdown": "^8.0.7",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vitest": "^0.32.4"
  }
}
